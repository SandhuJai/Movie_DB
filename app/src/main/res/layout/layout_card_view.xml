<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/card_image_poster_view"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/loader" />

    <LinearLayout
        android:id="@+id/list_description_btn"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_toRightOf="@id/card_image_poster_view"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="4"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_card_movie_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="movieName"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rank_list_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#1"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/rating_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7/10"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="4"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>

    <View style="@style/Divider"
        android:layout_marginTop="5dp"
        android:layout_below="@id/card_image_poster_view"></View>

</RelativeLayout>